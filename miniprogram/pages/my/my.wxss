page {
  background-color: #edece8;
}


.user_info_wrap{
  /* vh表示视口的高 */
 height: 45vh;
 /* 图片超出容器区域截取 */
 overflow: hidden;
 background: var(--themeColor);
 /* 相对定位 */
 position: relative;
}

.user_info_wrap .user_img_wrap{
  /* 相对定位 */
 position: relative;
}

.user_info_wrap .user_img_wrap .user_bg{
 height: 50vh;
 /* 高斯模糊滤镜 */
 filter: blur(10rpx);
}

.user_info_wrap .user_img_wrap .user_info{
 /* 绝对定位 */
 position: absolute;
 /* 水平居中 */
 left: 50%;
 transform: translate(-50%);
 top: 20%;
 /* 文字居中 */
 text-align: center;
}

.user_info_wrap .user_img_wrap .user_info .user_icon{
 width: 150rpx;
 height: 150rpx;
 /* 边框圆角 */
 border-radius: 50%;
}

.user_info_wrap .user_img_wrap .user_info .user_name{
 color: white;
 /* 与头像的距离 */
 margin-top: 40%;
 /* font-size: 40rpx; */
}

.user_info_wrap .user_btn{
 /* 水平定位 */
 position: absolute;
 left: 50%;
 transform: translate(-50%);
 top: 40%;  
 border:1px solid greenyellow;
 font-size: 38rpx;
 color: greenyellow;
 padding: 30rpx;
 border-radius: 10rpx;
}

