.user_content{
  position: relative;
}

.user_content .user_main{
    position: absolute;
    width: 90%;
    left: 50%;
    /* 元素往左位移自身宽度50%的距离 */
    transform: translateX(-50%);
    top: -40rpx;
    color: #666666;   
    padding-bottom:100rpx;
}

.user_content .user_main .history_wrap{
  background-color: white;
  display: flex;
  justify-content: center;
}

.user_content .user_main .history_wrap navigator{
  float: 1;
  text-align: center;
  padding: 23rpx 17rpx;
  margin-right: 30rpx;
}

.user_content .user_main .history_wrap navigator .his_num{
  color: var(--themeColor);
}

.user_content .user_main .news_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1px solid #cccccc;
}

.user_content .user_main .books_wrap{
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1px solid #cccccc;
}


.user_content .user_main .app_info_wrap{
  margin-top: 30rpx;
  background-color: #fff;
}

.user_content .user_main .app_info_wrap .app_info_item{
  padding: 20rpx;
  border-bottom: 1px solid #cccccc;
}

.user_content .user_main .app_info_wrap .app_info_contact{
  display: flex;
  justify-content: space-between;
}

.user_content .user_main .recommend_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding:20rpx;
  padding: 0;
  display:flex;
}

.user_content .user_main .recommend_wrap button{
  flex: 1;
  background-color: #fff;
  font-size: 30rpx;
